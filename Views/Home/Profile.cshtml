@model Banking_System.Models.Customer
@{
    ViewData["Title"] = "Add Transfer";
}

<section class="vh-100" style="background-color: gray;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img src="@Model.UserImageUrl"
                class="rounded-circle img-fluid" style="width: 100px;" />
            </div>
            <h4 class="mb-2">@Model.Name</h4>
            <p class="text-muted mb-4">@Model.PhoneNumber <span class="mx-2">|</span> <a
                href="#!">@Model.Email</a></p>

            <h4>Balance : @Model.Balance$</h4>
            
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
